package taqvim;

import java.util.ArrayList;
import java.util.Date;

/**
 *
 * @author Vin√≠cius
 */
public class Fachada {
    
    ArrayList<Atividade> lista = new ArrayList<Atividade>();
    ArrayList<Disciplina> listaDisc = new ArrayList<Disciplina>();
    

    public Fachada() {
    }
    
    public void criarDisc(String acro, String profe, String senha1){
        Disciplina k = new Disciplina(acro,profe,senha1);
        listaDisc.add(k);
        System.out.println("Disciplina criada" + k.toString());        
    }
    
    
    public void criarAtv(String nomee, String desc, String statuss, String tagi,String nomeProf,int cod){
        Atividade s = new Atividade (nomee,desc,statuss,tagi,cod);
        for(Disciplina p: listaDisc){
            if(p.getProf().contains(nomeProf)){
                s.setDisc(p);
                lista.add(s);
            }
        }
        
        
    }
    
    public void buscar(int tagb){
        for(Atividade p: lista){
            if(p.getCod() == tagb){
                System.out.println(p.toString());
            }
        }
    }
    public void excluirAtividade(int tagB){
        for(Atividade p: lista){
            if(p.getCod()==(tagB)){
                lista.remove(p);
            }
        }
    }
    public void concluirAtividade(int tagB){
        for(Atividade p: lista){
            if(p.getCod()== tagB){
                p.setStatus("Concluida");
            }
        }
    }
    
    
    public void visualizarAtvs(){
        System.out.println("ATIVIDADES");
        for(Atividade p: lista){
            System.out.println(p.getDisc().getAcr()+ " = " +p.getNome() + ": " + p.getDesc());
        }
    }
    public void feed(){
        for(Atividade p: lista){
            if(p.getStatus().contains("Em andamento")){
                System.out.println("\nAtividades em Andamento:\n"+p.toString());
            }
            if(p.getStatus().contains("Finalizada")){
                System.out.println("\nAtividades finalizadas:\n"+p.toString());
            }
            if(p.getStatus().contains("Arquivada")){
                System.out.println("\nAtividades arquivadas:\n"+ p.toString());
            }
        }
        
    }
    }
        
