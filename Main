package taqvim;

import java.util.Scanner;

/**
 *
 * @author Vinícius
 */
public class Main {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        
        //OBS: O STATUS DAS ATIVIDADES DEVEM SER = "    Em andamento / Finalizada / Arquivada
        
        Fachada x = new Fachada();
        Scanner s = new Scanner(System.in);
        
        System.out.println("Oque voce deseja fazer:\n 1-Criar Disciplina 2-Criar Atividade");
        String alet = s.next();
        
    
        

        if(alet == "1"){
            System.out.println("Digite o nome:");
            String nome = s.next();
            System.out.println("Digite a descrição:");
            String desc = s.next();
            System.out.println("Digite a Status:");
            String stts = s.next();
            System.out.println("Digite a Tag:");
            String tag = s.next();
            System.out.println("Digite o codigo da atividade");
            int cod = s.nextInt();
            x.criarAtv(nome, desc, stts, tag, nome, cod);
        }
        if(alet == "2"){
            System.out.println("Digite seu acrônimo:");
            String acr = s.next();
            System.out.println("Digite o nome do Profinho:");
            String prof = s.next();
            System.out.println("Digite a senha:");
            String senha = s.next();
            x.criarDisc(acr, prof, senha);

        }
        if(alet == "3" ){
            System.out.println("Digite o codigo da atividade");
            int cod = s.nextInt();
            x.buscar(cod);
            
            
            
        }
        if(alet == "4"){
            System.out.println("Digite o codigo da atividade pra ser excluida");
            int cod = s.nextInt();
            x.excluirAtividade(cod);
        }
        if(alet == "5"){
            System.out.println("Digite o codigo da atividade pra ser concluida");
            int cod = s.nextInt();
            x.concluirAtividade(cod);
        }
        
        
        

        
        
    }
    
}
